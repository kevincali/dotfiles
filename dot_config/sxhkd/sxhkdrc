#################
#### GENERAL ####
#################
super + Escape
	pkill -USR1 -x sxhkd && notify-send "Hotkey Daemon" "Reloaded sxhkd"
super + shift + Escape
	bspc wm --restart ; notify-send "Window Manager" "Restarted bspwm"
super + shift + s
    notify-send "Screen" "Turning off" ;\
    sleep 0.5 ;\
    xset dpms force standby
super + ctrl + shift + s
    notify-send "Screen" "Locking" ;\
    sleep 0.5 ;\
    xflock4

######################
#### APP LAUNCHER ####
######################
ctrl + space
    rofi -show drun -modi drun,power:rofi-power-menu
super + Return
	alacritty
super + shift + g
  alacritty -e sh -c "echo n | lazygit"

### SCRATCHPAD ###
super + shift + Return
	scratchpad scratch-term
super + shift + space
	scratchpad TelegramDesktop
super + shift + m
	scratchpad Mailspring
super + shift + b
	scratchpad Bitwarden
super + shift + s
	scratchpad Spotify
super + shift + t
	scratchpad TeamSpeak 3

####################
#### MEDIA KEYS ####
####################
XF86MonBrightness{Up,Down}
	brightnessctl s 10%{+,-}

XF86Display
  xfce4-display-settings --minimal

XF86AudioMicMute
	amixer set Capture toggle
XF86Audio{Raise,Lower}Volume
	amixer -q set Master 5%{+,-} unmute
XF86AudioMute
	amixer set Master toggle

XF86AudioPrev
	playerctl previous
XF86AudioPlay
	playerctl play-pause
XF86AudioStop
	playerctl stop
XF86AudioNext
	playerctl next

Print
	xfce4-screenshooter
shift + Print
	xfce4-screenshooter -r

